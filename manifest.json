{
  "manifest_version": 2,

  "name": "Profile Sharer",
  "description": "This extension shares brwoser profiles between different browsers",
  "version": "1.0",

  "background": {
    "scripts": [
      "JS/ProfileHandler.js",
      "JS/CookieManager.js",
      "JS/background.js"
      ]
  },

  "browser_action": {
    "default_icon": "Resources/Images/icon.png",
    "default_popup": "HTML/BasePage.html"
  },
  "permissions": [
    "cookies",
    "webRequest",
    "webRequestBLocking",
    "http://*/*",
    "https://*/*"
  ]
}
